<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EE0000</item>
        <item name="colorPrimaryVariant">#E91E63</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#DA0303</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="AppTheme.Other.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#DA0303</item>
    </style>

    <style name="ButtonOperacaoTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">#4C0707</item>
    </style>

    <style name="AppTheme.Equal.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#B30000</item>
    </style>
</resources>